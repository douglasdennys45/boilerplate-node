{
  "name": "boilerplate-node",
  "version": "1.0.0",
  "description": "Boilerplate to streamline the development process with some out-of-the-box use cases",
  "main": "build/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/infrastructure/server/api/index.ts",
    "start": "node build/infrastructure/server/api/index.js",
    "clean": "rimraf dist",
    "prepare": "husky install",
    "build": "npm run clean && tsc -p tsconfig-build.json",
    "check": "npm-check -s -u",
    "lint:fix": "eslint 'src/**' --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand --forceExit",
    "test:watch": "npm t -- --watchAll",
    "test:staged": "npm t -- --findRelatedTests",
    "test:coverage": "npm t -- --coverage"
  },
  "author": "Douglas Dennys <douglasdennys45@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "module-alias": "^2.2.2",
    "mongodb": "^4.5.0",
    "restana": "^4.9.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.1.2",
    "@shelf/jest-mongodb": "^2.2.2",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/jest": "^27.4.1",
    "@types/module-alias": "^2.0.1",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^17.0.23",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-mock-extended": "^2.0.5",
    "lint-staged": "^12.3.7",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  }
}
