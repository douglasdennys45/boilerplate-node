{
  "compilerOptions": {
    "noImplicitOverride": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDirs": ["lib", "test"],
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "lib",
    "paths": {
      "@/*": ["*"],
      "@/test/*": ["../test/*"],
    },
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["lib", "test"]
}
